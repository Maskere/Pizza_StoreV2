@page
@model Pizza_StoreV2.Pages.Orders.EditOrderModel
@{
}
<h1>Edit order</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Order.OrderID" class="control-label" hidden>ID</label>
        <input asp-for="@Model.Order.OrderID" class="form-control" hidden/>
        <span asp-validation-for="@Model.Order.OrderID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Order.NumberOfPizzasInOrder" class="control-label">Number of pizzas</label>
        <input asp-for="@Model.Order.NumberOfPizzasInOrder" class="form-control" />
        <span asp-validation-for="@Model.Order.NumberOfPizzasInOrder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Order.Pizza" class="control-label">Pizza</label>
        <input asp-for="@Model.Order.Pizza" class="form-control" />
        <span asp-validation-for="@Model.Order.Pizza" class="text-danger"></span>
        <a asp-page="CreatePizza" asp-route-id="">New pizza</a>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Order.Customer" class="control-label">Customer</label>
        <input asp-for="@Model.Order.Customer" class="form-control" />
        <span asp-validation-for="@Model.Order.Customer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn brn-primary" />
    </div>

</form>