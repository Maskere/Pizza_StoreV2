@page
@model Pizza_StoreV2.Pages.Customers.CreateCustomerModel
@{
    ViewData["Title"] = "CreateCustomer";
}
<h1>Create customer</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Customer.CustomerName" class="control-label">Name</label>
        <input asp-for="@Model.Customer.CustomerName" class="form-control" />
        <span asp-validation-for="@Model.Customer.CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Customer.CustomerId" class="control-label">ID</label>
        <input asp-for="@Model.Customer.CustomerId" class="form-control" />
        <span asp-validation-for="@Model.Customer.CustomerId" class="text-danger"></span>
    </div>
    <h5>
        Optional properties
    </h5>
    <div>
        <label asp-for="@Model.Customer.PhoneNumber" class="control-label">Phone number</label>
        <input asp-for="@Model.Customer.PhoneNumber" class="form-control" />
        <span asp-validation-for="@Model.Customer.PhoneNumber" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Customer.Email" class="control-label">Email</label>
        <input asp-for="@Model.Customer.Email" class="form-control" />
        <span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>

</form>